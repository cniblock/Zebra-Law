---
layout: base.njk
ogType: article
---
<section class="section article-section">
  <div class="container article-container">
    <a class="article-back" href="/news.html">&larr; Back to News</a>

    <div class="article-header">
      <span class="news-tag news-tag-{{ category }}">{{ category | capitalize }}</span>
      <h1>{{ articleTitle }}</h1>
      <div class="article-meta">
        <span class="article-date">{{ date | dateFull }}</span>
        <a class="article-share" href="https://www.linkedin.com/company/zebralaw/" target="_blank" rel="noopener">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          Share on LinkedIn
        </a>
      </div>
    </div>

    <div class="article-hero-image">
      <img src="/images/{{ image }}" alt="{{ imageAlt | default(articleTitle) }}">
    </div>

    <div class="article-body">
      {{ content | safe }}
    </div>

    {% if related and related.length %}
    <div class="article-related">
      <h3>Related Articles</h3>
      <div class="related-grid">
        {%- for item in collections.news -%}
          {%- for rel in related -%}
            {%- if item.fileSlug == rel.slug -%}
        <a class="related-card" href="{{ item.url }}">
          <span class="news-tag news-tag-{{ item.data.category }}">{{ item.data.category | capitalize }}</span>
          <h4>{{ item.data.articleTitle }}</h4>
          <span class="news-date">{{ item.date | dateDisplay }}</span>
        </a>
            {%- endif -%}
          {%- endfor -%}
        {%- endfor -%}
      </div>
    </div>
    {% endif %}
  </div>
</section>
