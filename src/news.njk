      <section class="section news-section">
        <div class="container">
          <div class="news-filters">
            <button class="news-filter active" data-filter="all">All</button>
            <button class="news-filter" data-filter="general">General</button>
            <button class="news-filter" data-filter="industry">Industry</button>
            <button class="news-filter" data-filter="people">People</button>
          </div>

          <div class="news-grid-boxes">
            {%- for article in collections.news -%}
            <a class="news-box news-box-image" href="{{ article.url }}" data-category="{{ article.data.category }}">
              <img class="news-box-img" src="/images/{{ article.data.image }}" alt="{{ article.data.imageAlt | default(article.data.articleTitle) }}" loading="lazy">
              <div class="news-box-overlay"></div>
              <div class="news-box-content">
                <span class="news-tag news-tag-{{ article.data.category }}">{{ article.data.category | capitalize }}</span>
                <h2>{{ article.data.articleTitle }}</h2>
                <span class="news-box-date">{{ article.date | dateDisplay }}</span>
              </div>
            </a>
            {%- endfor -%}
          </div>
        </div>
      </section>

      <section class="section alt">
        <div class="container center-cta">
